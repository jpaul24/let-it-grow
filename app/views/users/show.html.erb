<div class="show-container">
  <div class="cards-container">
    <div class="card-container-user">
      <div class="item-card">
        <% if current_user.photo.url.nil? %>
          <%= image_tag('avatar-default-picture.jpg') %>
        <% else  %>
          <%= cl_image_tag current_user.photo %>
        <% end %>
        <div class="card-product-infos">
          <div class="user-infos">
            <h4>Username: <%= current_user.username %></h4>
            <h4>Bio: <%= current_user.bio %></h4>
          </div>
          <div class="first-button">
            <div><span class="btn-update"><%= link_to "Update profile", edit_user_path %></span></div>
            <div><span class="btn-update"><%= link_to "My bookings", bookings_path %></span></div>
          </div>
        </div>
      </div>
    </div>
      <h3 style="margin: 40px 0px 20px">My Garden</h3>
    <div>
      <div class="row">
        <%  current_user.gardens.each do |garden| %>
          <div class="item-card p-10">
          <% if garden.photo.url.nil? %>
            <%= image_tag('avatar-default-picture.jpg') %>
            <% else  %>
              <%= cl_image_tag garden.photo %>
            <% end %>
              <h4>Name: <%= garden.name %></h4>
              <h4>Location: <%= garden.location %></h4>
              <h4>Purpose: <%= garden.purpose %></h4>
              <h4>Price: <%= garden.price_per_day %></h4>
              <h4>Size: <%= garden.size %></h4>
              <div style="text-align: center; flex-grow: 1;"><button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModalCenter">
                Update my garden
              </button>
              </div>
            <%= render 'shared/update-garden', garden: garden %>
        </div>
        <% end %>
      </div>

      </div>
      <br>

    </div>
  </div>
</div>
